<Window x:Class="BinaryClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryClock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="525">
    <Viewbox>
    <Grid x:Name="grid">
        <Grid x:Name="firstRow" Margin="10,10,0,150" Width="50" HorizontalAlignment="Left"/>
        <Grid x:Name="secondRow" Margin="70,10,0,150" Width="50" HorizontalAlignment="Left"/>
        <Grid x:Name="thirdRow" Margin="140,10,0,150" Width="50" HorizontalAlignment="Left"/>
        <Grid x:Name="fourthRow" Margin="200,10,0,150" Width="50" HorizontalAlignment="Left"/>
        <Grid x:Name="fifthRow" Margin="260,10,0,150" Width="50" HorizontalAlignment="Left"/>
        <Grid x:Name="sixthRow" Margin="320,10,0,150" Width="50" HorizontalAlignment="Left"/>
        <Grid x:Name="seventhRow" Margin="380,10,0,150" Width="50" HorizontalAlignment="Left"/>
        <Grid x:Name="eightRow" Margin="440,10,0,150" Width="50" HorizontalAlignment="Left"/>
        <TextBlock x:Name="time" HorizontalAlignment="Left" Margin="218,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
    </Viewbox>
</Window>
